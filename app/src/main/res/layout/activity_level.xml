<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/board"
        tools:context="com.arturagapov.easymath.LevelActivity">
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_above="@+id/more_apps"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent" android:layout_height="wrap_content">
    <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/choice_button_height"
            android:layout_marginTop="@dimen/margin_top_for_button"
            android:layout_marginLeft="@dimen/margin_choice_button_horizontal"
            android:layout_marginRight="@dimen/margin_choice_button_horizontal"
            android:layout_centerHorizontal="true"
            android:text="@string/learn"
            android:textStyle="bold"
            android:textSize="@dimen/titleText"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttonroundedmagenta"
            android:id="@+id/learn"
            android:onClick="onClickLearn"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/choice_button_height"
            android:layout_below="@+id/learn"
            android:layout_marginTop="@dimen/margin_between_buttons_vertical"
            android:layout_marginLeft="@dimen/margin_choice_button_horizontal"
            android:layout_marginRight="@dimen/margin_choice_button_horizontal"
            android:layout_centerHorizontal="true"
            android:text="@string/practice"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttonroundedgreen"
            android:id="@+id/practice"
            android:onClick="onClickPractice"/>
    </LinearLayout>
    <TextView
            android:id="@+id/more_apps"
            android:textColor="@color/colorWhite"
            android:text="@string/more_apps"
            android:layout_above="@+id/geo_quiz"
            android:layout_marginTop="@dimen/margin_between_buttons_vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:layout_width="@dimen/choice_button_height"
            android:layout_height="@dimen/choice_button_height"
            android:id="@+id/geo_quiz"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/geoquizicon"
            android:layout_marginTop="@dimen/margin_between_buttons_vertical"
            android:layout_marginBottom="@dimen/margin_between_buttons_vertical"
            android:contentDescription="geo_quiz_promo"
            android:onClick="onClickGeoQuiz"/>
</RelativeLayout>
